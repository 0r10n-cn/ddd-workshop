<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping ../vendor/doctrine/orm/doctrine-mapping.xsd"
>
    <entity name="Billing\Domain\Entity\LineItem" table="invoice2item">
	    <id name="id" column="id" type="integer">
		    <generator />
	    </id>

	    <field name="quantity" column="quantity" type="decimal" />

	    <many-to-one field="invoice" target-entity="Billing\Domain\Aggregate\Invoice">
		    <join-column name="invoice_id" nullable="false" />
	    </many-to-one>

	    <many-to-one field="item" target-entity="Billing\Domain\Aggregate\Item">
		    <cascade><cascade-all/></cascade>
		    <join-column name="item_id" nullable="false" />
	    </many-to-one>
    </entity>
</doctrine-mapping>
